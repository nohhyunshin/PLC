<Window x:Class="PLC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLC"
        mc:Ignorable="d"
        Title="ELEVATOR" Height="450" Width="500">

    <!-- WPF 배경색 -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F5F5F5" Offset="0"/>
            <GradientStop Color="#DADADA" Offset="0.4"/>
            <GradientStop Color="#C0C0C0" Offset="0.7"/>
            <GradientStop Color="#EDEDED" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <!-- 원형 버튼 디자인 -->
    <Window.Resources>
        <Style x:Key="CircularButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="7 10 7 10"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFDFDFD" Offset="0.0"/>
                        <GradientStop Color="#FFD9D9D9" Offset="0.4"/>
                        <GradientStop Color="#FFB0B0B0" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <EventSetter Event="Click" Handler="FloorButton_Click"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid">
                            <!-- TemplateBinding으로 Background/Border/Efect를 연결 -->
                            <Ellipse x:Name="ellipse"
                                 Stroke="{TemplateBinding BorderBrush}"
                                 StrokeThickness="{TemplateBinding BorderThickness}"
                                 Fill="{TemplateBinding Background}"
                                 Effect="{TemplateBinding Effect}" />

                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          TextElement.Foreground="{TemplateBinding Foreground}"
                                          TextElement.FontWeight="{TemplateBinding FontWeight}" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ellipse" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
                                            <GradientStop Color="#FFC0C0C0" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Width="150" Height="60" Background="Black" CornerRadius="3" BorderBrush="Gray"
                BorderThickness="2" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="upDown" Text="" FontSize="25" FontWeight="SemiBold" Foreground="Red"
                           VerticalAlignment="Center" TextAlignment="Center" Grid.Column="0" Margin="0 0 0 5"/>

                <TextBlock x:Name="display" Text="" FontSize="25" FontWeight="SemiBold" Foreground="Red"
                           VerticalAlignment="Center" TextAlignment="Center" Grid.Column="1" Margin="0 0 0 5"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="Capacity Kg" TextAlignment="Left" FontSize="15" FontWeight="SemiBold" Foreground="DarkSlateGray" Margin="3"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="1000" TextAlignment="Right" FontSize="15" FontWeight="SemiBold" Foreground="DarkSlateGray" Margin="3"/>

                <TextBlock Grid.Column="0" Grid.Row="1" Text="Persons" TextAlignment="Left" FontSize="15" FontWeight="SemiBold" Foreground="DarkSlateGray" Margin="3"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="15" TextAlignment="Right" FontSize="15" FontWeight="SemiBold" Foreground="DarkSlateGray" Margin="3"/>

                <UniformGrid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Columns="3">
                    <TextBlock Text="승" FontSize="15" FontWeight="SemiBold" Foreground="DarkSlateGray" HorizontalAlignment="Left"/>
                    <TextBlock Text="객" FontSize="15" FontWeight="SemiBold" Foreground="DarkSlateGray" HorizontalAlignment="Center"/>
                    <TextBlock Text="용" FontSize="15" FontWeight="SemiBold" Foreground="DarkSlateGray" HorizontalAlignment="Right"/>
                </UniformGrid>
            </Grid>
        </StackPanel>


        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock x:Name="DOOR" Text="DOOR" TextAlignment="Center" Margin="10"
                        FontSize="35" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="opCL" Text="        " TextAlignment="Center" Margin="10"
                        FontSize="35" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center"
                    x:Name="ElevatorPanel" Width="130" Background="Transparent" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="1" Style="{StaticResource CircularButton}" Click="FloorButton_Click"/>
                <Button Content="2" Style="{StaticResource CircularButton}" Click="FloorButton_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="3" Style="{StaticResource CircularButton}" Click="FloorButton_Click"/>
                <Button Content="4" Style="{StaticResource CircularButton}" Click="FloorButton_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="5" Style="{StaticResource CircularButton}" Click="FloorButton_Click"/>
                <Button Content="6" Style="{StaticResource CircularButton}" Click="FloorButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
